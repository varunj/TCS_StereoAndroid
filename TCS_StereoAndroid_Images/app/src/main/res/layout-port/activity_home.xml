<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textColor="@color/colorAccent"
        android:text="@string/home_heading"
        android:id="@+id/home_heading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="@dimen/home_heading_size"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorHomeText"
        android:textStyle="bold"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/home_ip_right"
        android:gravity="center"
        android:textSize="@dimen/home_ip_size"
        android:text="@string/home_ip_text_right"
        android:hint="@string/home_ip_hint_right"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorHomeText"
        android:textStyle="bold"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/home_ip_left"
        android:gravity="center"
        android:textSize="@dimen/home_ip_size"
        android:text="@string/home_ip_text_left"
        android:hint="@string/home_ip_hint_left"
        android:layout_marginTop="36dp"
        android:layout_above="@+id/home_ip_right"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorHomeText"
        android:ems="10"
        android:id="@+id/home_path"
        android:gravity="center"
        android:textSize="@dimen/home_ip_size"
        android:text="@string/home_path"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/home_ip_right"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_button"
        android:id="@+id/home_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
